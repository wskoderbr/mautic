{#
  NOTE - The contents of this view will replace the 'update-panel' <div> of MauticCoreBundle:update:index.html.php
#}
<div class="col-sm-offset-2 col-sm-8">
    <div id="main-update-panel" class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">
                {{ 'mautic.core.update.in.progress'|trans }}
            </h2>
        </div>
        <div class="panel-body">
            <table class="table table-hover addon-list" id="updateTable">
                <thead>
                <tr>
                    <th>{{ 'mautic.core.update.heading.step'|trans }}</th>
                    <th>{{ 'mautic.core.update.heading.status'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ 'mautic.core.update.step.running.checks'|trans }}</td>
                    <td id="update-step-running-checks-status"><span class="hidden-xs">{{ 'mautic.core.update.step.in.progress'|trans }}</span><i class="pull-right fa fa-spinner fa-spin"></i></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
